package javatest;
/*
 반복문 for, while, do~while
*/
public class java6 {

	public static void main(String[] args) {
		new data3().abc();
	}
}

/* 1부터 5까지 출력문 */
class data3 {
    public void abc() {
    	/*
    	int f;
        for(f = 1; f<=5; f++) {
        	System.out.println(f);
        }
        */
    	
    	/*
    	int w = 1;
    	while(w <= 5) {
    		System.out.println(w);
    		w++;
    	}
    	*/
    	
    	/*
    	int w = 1;
    	do {
    		System.out.println(w);
    		w++;
    	} while(w <= 5);
    	*/
    	
    	/*
    	 응용문제2
    	 해당 숫자를 역순으로 출력합니다.
    	 10 ~ 1까지 출력
    	*/
    	
    	int w = 10;
    	while(w <= 0) {
    		System.out.println(w);
    		w++;
    	}
    	
    	for (int i = 5; i >= 0; i--) {
            for (int j = 0; j <= i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}